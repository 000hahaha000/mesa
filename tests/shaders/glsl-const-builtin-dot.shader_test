[require]
GL >= 2.0
GLSL >= 1.20

[vertex shader file]
glsl-mvp.vert

[fragment shader]
#version 120
void main()
{
   const vec2 c1 = vec2(0.5, 0.25);
   const vec2 c2 = vec2(1.0, 2.0);
   const float c = dot(c1, c2);
   gl_FragColor = vec4(0.0, c, 0.0, 0.0);
}

[test]
clear color 0.0 0.0 0.0 0.0
clear
ortho
draw rect 10 10 10 10
probe rgb 15 15 0.0 1.0 0.0
