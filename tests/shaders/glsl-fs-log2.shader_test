[require]
GL >= 2.0
GLSL >= 1.10

[vertex shader file]
glsl-mvp.vert

[fragment shader]
uniform vec4 args1, args2;

void main()
{
	gl_FragColor = log2(args1) + args2;
}

[test]
clear color 1.0 0.0 0.0 0.0
clear
ortho
uniform vec4 args1  1.0  2.0  4.0  0.0
uniform vec4 args2  0.5 -0.5 -1.5  0.0
draw rect 10 10 10 10
probe rgb 15 15 0.5 0.5 0.5
