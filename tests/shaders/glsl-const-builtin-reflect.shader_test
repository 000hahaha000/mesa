[require]
GL >= 2.0
GLSL >= 1.20

[vertex shader file]
glsl-mvp.vert

[fragment shader]
#version 120
void main()
{
    const vec3 v1 = vec3(-1.0, 0.0, 0.0);
    const vec3 v2 = vec3(0.70710678, 0.70710678, 0.0);
    const vec3 r = reflect(v1, v2);
    gl_FragColor = vec4(r, 1.0);
}

[test]
clear color 0.0 0.0 0.0 0.0
clear
ortho
draw rect 10 10 10 10
probe rgba 15 15 0 1 0 1
