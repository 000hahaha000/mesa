[require]
GL >= 2.0
GLSL >= 1.20

[vertex shader file]
glsl-mvp.vert

[fragment shader]
#version 120
void main()
{
    const float x = min(0.25, 0.5);
    const vec2 v = min(vec2(0.25, 0.7), 0.5);
    gl_FragColor = vec4(0.0, x + v.x + v.y, 0.0, 1.0);
}

[test]
clear color 0.0 0.0 0.0 0.0
clear
ortho
draw rect 10 10 10 10
probe rgb 15 15 0.0 1.0 0.0
