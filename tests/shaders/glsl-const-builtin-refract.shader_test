[require]
GL >= 2.0
GLSL >= 1.20

[vertex shader file]
glsl-mvp.vert

[fragment shader]
#version 120
void main()
{
    const float zero = refract(0.0, 0.0, 2.0);
    const vec2 v1 = vec2(-1.0, 0.0);
    const vec2 v2 = vec2(0.70710678, 0.70710678);
    const vec2 r = refract(v1, v2, 0.5);
    gl_FragColor = vec4(r.x + 1.0, r.y + 1.0, zero, 1.0);
}

