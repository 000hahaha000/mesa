[require]
GL >= 2.0
GLSL >= 1.20

[vertex shader]
#version 120
uniform int n;
void main()
{
	for (int i = 0; i < n; i++) {
		gl_TexCoord[i] = vec4(0.5, 0.5, 0.5, 0.5) * i;
	}
	gl_Position = gl_Vertex;
}

[fragment shader]
uniform int index;
void main()
{
	gl_FragColor = gl_TexCoord[index];
}

[test]
uniform int index 1
uniform int n 4
draw rect -1 -1 2 2
probe rgba 1 1 0.5 0.5 0.5 0.5
