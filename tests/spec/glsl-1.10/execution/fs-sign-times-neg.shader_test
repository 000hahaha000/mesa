[require]
GLSL >= 1.10

[vertex shader passthrough]

[fragment shader]
uniform vec4 v[25];

void main()
{
	vec4 color = vec4(0.0, 1.0, 0.0, 1.0);

	for (int i = 0; i < 25; i++) {
		if (sign(v[i].x) * -v[i].y != v[i].z)
			color = vec4(1.0, 0.0, 0.0, 1.0);
	}

	gl_FragColor = color;
}

