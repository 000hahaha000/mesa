[require]
GLSL >= 1.40

[vertex shader]
#version 140

uniform ubo1 {
	float f[4];
};

in vec4 piglit_vertex;
out vec4 v;

void main()
{
	gl_Position = piglit_vertex;
	v = vec4(f[0], f[1], f[2], f[3]);
}

[fragment shader]
#version 140

in vec4 v;

void main()
{
	gl_FragColor = v;
}

[test]
uniform float f[0] 0.0
uniform float f[1] 1.0
uniform float f[2] 0.0
uniform float f[3] 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 0.0
