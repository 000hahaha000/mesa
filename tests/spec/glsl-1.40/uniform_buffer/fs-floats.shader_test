[require]
GLSL >= 1.40

[vertex shader passthrough]

[fragment shader]
#version 140

uniform ubo1 {
	float r;
	float g;
	float b;
	float a;
};

void main()
{
	gl_FragColor = vec4(r, g, b, a);
}

