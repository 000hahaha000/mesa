 1.0  1.0
-1.0  1.0

[test]
uniform float r 0.0
uniform float g 1.0
uniform float b 0.0
uniform float a 0.0
draw arrays GL_TRIANGLE_FAN 0 4
probe all rgba 0.0 1.0 0.0 0.0
