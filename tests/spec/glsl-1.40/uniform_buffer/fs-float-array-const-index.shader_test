[require]
GLSL >= 1.40

[vertex shader passthrough]

[fragment shader]
#version 140

uniform ubo1 {
	float f[4];
};

void main()
{
	gl_FragColor = vec4(f[0], f[1], f[2], f[3]);
}

[test]
uniform float f[0] 0.0
uniform float f[1] 1.0
uniform float f[2] 0.0
uniform float f[3] 0.0
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 0.0
